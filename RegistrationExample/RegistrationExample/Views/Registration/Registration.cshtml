@model RegistrationExample.Models.UserViewModel
@{
    ViewBag.Title = "Register new user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>


@using (Html.BeginForm("RegisterUser", "Registration", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="col-md-8">
        @Html.LabelFor(x => x.FirstName, new {@class = "col-md-2"})
        @Html.TextBoxFor(x => x.FirstName, new {@class = "col-md-6"})
        @Html.ValidationMessageFor(x => x.FirstName)
    </div>
    <div class="col-md-8">
        @Html.LabelFor(x => x.LastName, new {@class = "col-md-2"})
        @Html.TextBoxFor(x => x.LastName, new {@class = "col-md-6"})
        @Html.ValidationMessageFor(x => x.LastName)
    </div>
    <div class="col-md-8">
        @Html.LabelFor(x => x.Login, new {@class = "col-md-2"})
        @Html.TextBoxFor(x => x.Login, new {@class = "col-md-6"})
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="col-md-8">
        @Html.LabelFor(x => x.Password, new {@class = "col-md-2"})
        @Html.TextBoxFor(x => x.Password, new {@class = "col-md-6"})
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    <div class="col-md-8">
        @Html.LabelFor(x => x.ConfirmPassword, new {@class = "col-md-2"})
        @Html.TextBoxFor(x => x.ConfirmPassword, new {@class = "col-md-6"})
        @Html.ValidationMessageFor(x => x.ConfirmPassword)
    </div>
    <div class="col-md-8">
        @Html.LabelFor(x => x.RoleName, new { @class = "col-md-2" })
        @Html.DropDownListFor(x => x.RoleId, (IEnumerable<SelectListItem>)ViewBag.Roles, new { @class = "col-md-6" })
    </div>
    <div class="col-md-5">
        <input type="submit" class="btn btn-default" value="Register" />
    </div>
}

